<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.MyMainPage"
             xmlns:ContentView="clr-namespace:PictureGallery.Views"
             Title="MyMainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Page1" Clicked="OnPage1Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Text="Page1" Clicked="OnPage1Clicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <VerticalStackLayout>
        <ContentView:Header />
        <ContentView x:Name="SubPage" />

        <Button
            Text="Upload photo"
            Clicked="UploadMedia"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            x:Name="FileName"
            Text="No photo selected"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <!--added image view to xaml -->
        <Image
            x:Name="SelectedImage"
            WidthRequest="250"
            HeightRequest="250"
            Aspect="AspectFit"
            IsVisible="False"
            VerticalOptions="Center"
            HorizontalOptions="Center" />

        <ContentView:Footer />
    </VerticalStackLayout>
</ContentPage>