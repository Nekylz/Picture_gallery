<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.MyMainPage"
             xmlns:ContentView="clr-namespace:PictureGallery.Views"
             Title="MyMainPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Page1" Clicked="OnPage1Clicked"/>
        <ToolbarItem Text="Gallery" Clicked="OnPage2Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Pages">
            <MenuFlyoutItem Text="Page1" Clicked="OnPage1Clicked"/>
            <MenuFlyoutItem Text="Gallery" Clicked="OnPage2Clicked"/>
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <ScrollView VerticalOptions="Fill"
                HorizontalOptions="Fill">
        <VerticalStackLayout>
            <ContentView:Header />
            <ContentView x:Name="SubPage" />
            <ContentView:Footer />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>