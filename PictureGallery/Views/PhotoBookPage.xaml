<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.PhotoBookPage"
             Title="Fotoboek">
    <Grid x:Name="MainGrid" ColumnDefinitions="220,*" BackgroundColor="#F3E1DD">
        <VerticalStackLayout Padding="20" Spacing="10">

            <!-- Voeg foto toe -->
            <Button Text="Voeg foto toe" Clicked="AddPhoto_Clicked" />

            <!-- Pagina overzicht -->
            <CollectionView x:Name="PagesCollectionView"
                        ItemsSource="{Binding PhotoBook.Pages}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5" Margin="5" BorderColor="#E0E0E0" CornerRadius="10">
                            <StackLayout Spacing="10">

                                <!-- 2x2 Grid voor max 4 foto's per pagina -->
                                <CollectionView ItemsSource="{Binding Photos}" HeightRequest="310">
                                    <CollectionView.ItemsLayout>
                                        <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="5" VerticalItemSpacing="5" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding ImageSource}" Aspect="AspectFit" HeightRequest="150" WidthRequest="150"/>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Titel/tekst per pagina -->
                                <Entry Text="{Binding Title}" Placeholder="Voeg titel/tekst toe"/>

                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
