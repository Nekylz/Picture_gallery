<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.Gallery"
             Title="Gallery">
    <Grid x:Name="MainGrid" ColumnDefinitions="220,*">
        <!-- SIDEBAR -->
        <Border x:Name="Sidebar"
                Grid.Column="0"
                BackgroundColor="#E6E6E6"
                StrokeThickness="0"
                WidthRequest="220"
                IsVisible="True"
                HorizontalOptions="Start"
                VerticalOptions="Fill">
            <VerticalStackLayout Padding="24,32" Spacing="18">
                <Label Text="Menu"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#222"
                       Margin="0,0,0,6" />

                <Frame x:Name="ImportPhotoFrame"
                       BackgroundColor="#6750A4"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="ImportPhoto_Tapped" />
                    </Frame.GestureRecognizers>
                    <Label Text="Import Photo"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame BackgroundColor="#6750A4"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <Label Text="Photo Gallery"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame BackgroundColor="#6750A4"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <Label Text="Labels"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame BackgroundColor="#6750A4"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="Transparent">
                    <Label Text="Create Photobook"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
            </VerticalStackLayout>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1">
            <!-- TOGGLE BUTTON -->
            <Button x:Name="SidebarToggleButton"
                    Text="☰"
                    FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="#6750A4"
                    TextColor="White"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="10"
                    Clicked="ToggleSidebar_Clicked" />

            <VerticalStackLayout x:Name="MainContent"
                                 Padding="20" 
                                 Spacing="12" 
                                 Margin="0,60,0,0">

            <!-- HEADER -->
            <Grid ColumnDefinitions="Auto,*">
                <Label 
                    Text="Photo Gallery"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

                <HorizontalStackLayout Grid.Column="1"
                                       Spacing="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center">
                    <Button Text="Filter: Label"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12" />
                    <Button Text="Newest ↑"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12" />
                    <Frame HeightRequest="40"
                           WidthRequest="40"
                           BackgroundColor="#EDEDED"
                           CornerRadius="20" />
                </HorizontalStackLayout>
            </Grid>

            <!-- PHOTO COUNT -->
            <Label x:Name="PhotoCountLabel"
                   Text="{Binding Photos.Count, StringFormat='Fotos: {0}'}"
                   HorizontalOptions="Start"
                   Margin="0,5,0,0"
                   IsVisible="False" />

            <!-- COLLECTIONVIEW -->
            <CollectionView x:Name="PhotosCollection"
                            Margin="0,20,0,0"
                            ItemSizingStrategy="MeasureFirstItem">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="4"
                                     HorizontalItemSpacing="16"
                                     VerticalItemSpacing="16" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HeightRequest="180"
                               WidthRequest="180"
                               Padding="10"
                               Margin="0"
                               HasShadow="False"
                               CornerRadius="16"
                               BackgroundColor="White"
                               BorderColor="#E0E0E0">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState x:Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="Frame.BorderColor" Value="#E0E0E0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Property="Frame.BorderColor" Value="#C5C5C5" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Property="Frame.BorderColor" Value="#A0A0A0" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Image Source="{Binding ImageSource}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                   BackgroundColor="White">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnPhotoTapped"
                                                          NumberOfTapsRequired="1"
                                                          CommandParameter="{Binding .}" />
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            </VerticalStackLayout>

            <!-- FULLSCREEN OVERLAY -->
            <Grid x:Name="FullscreenOverlay"
                  BackgroundColor="#CC000000"
                  IsVisible="False"
                  VerticalOptions="Fill"
                  HorizontalOptions="Fill">

            <ScrollView VerticalOptions="Fill" HorizontalOptions="Fill">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">

                    <Image x:Name="FullscreenImage" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" MaximumHeightRequest="500" />

                    <!-- INFO -->
                    <StackLayout VerticalOptions="End" HorizontalOptions="Center" Spacing="5" BackgroundColor="Black" Opacity="0.5">
                        <Label x:Name="OverlayFileName" TextColor="White" FontSize="16" HorizontalTextAlignment="Center" />
                        <Label x:Name="OverlayDimensions" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label x:Name="OverlayFileSize" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                    </StackLayout>

                    <!-- ADD LABEL -->
                    <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                        <Entry x:Name="LabelEntry"
                               Placeholder="Add label"
                               WidthRequest="160"
                               BackgroundColor="White"
                               TextColor="Black"
                               PlaceholderColor="#777777" />
                        <Button Text="Add" Clicked="AddLabelButton_Clicked" />
                    </StackLayout>

                    <!-- DISPLAY LABELS -->
                    <StackLayout x:Name="LabelContainer" Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <Button Text="Close"
                    BackgroundColor="White"
                    TextColor="Black"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    Margin="20"
                    Clicked="CloseFullscreen" />
            </Grid>
        </Grid>
    </Grid>
</ContentPage>
