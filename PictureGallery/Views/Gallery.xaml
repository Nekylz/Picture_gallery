<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.Gallery"
             Title="Gallery">
    <Grid>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- HEADER -->
            <Grid ColumnDefinitions="Auto,*">
                <Label 
                    Text="Photo Gallery"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

                <HorizontalStackLayout Grid.Column="1"
                                       Spacing="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center">
                    <Button Text="Filter: Label"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12" />
                    <Button Text="Newest â†‘"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12" />
                    <Frame HeightRequest="40"
                           WidthRequest="40"
                           BackgroundColor="#EDEDED"
                           CornerRadius="20" />
                </HorizontalStackLayout>
            </Grid>

            <!-- UPLOAD BUTTON -->
            <Button
                Text="Upload photo"
                Clicked="UploadMedia"
                HorizontalOptions="Center"
                BackgroundColor="#6750A4"
                TextColor="White"
                CornerRadius="20"
                Padding="20,10" />

            <!-- PHOTO COUNT -->
            <Label x:Name="PhotoCountLabel"
                   Text="{Binding Photos.Count, StringFormat='Fotos: {0}'}"
                   HorizontalOptions="Start"
                   Margin="0,5,0,0"
                   IsVisible="False" />

            <!-- COLLECTIONVIEW -->
            <CollectionView x:Name="PhotosCollection"
                            ItemsSource="{Binding Photos}"
                            Margin="0,10,0,0">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="4" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="5" Margin="5" HasShadow="False" BorderColor="#E0E0E0" CornerRadius="12">
                            <StackLayout>
                                <Image Source="{Binding ImageSource}" Aspect="AspectFill" HeightRequest="90" WidthRequest="90">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="OnPhotoTapped" NumberOfTapsRequired="1" CommandParameter="{Binding .}" />
                                    </Image.GestureRecognizers>
                                </Image>

                                <!-- Labels onder de foto -->
                                <StackLayout BindableLayout.ItemsSource="{Binding Labels}" Orientation="Horizontal" Spacing="5">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Label Text="{Binding}" BackgroundColor="LightGray" Padding="2"/>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- FULLSCREEN OVERLAY -->
        <Grid x:Name="FullscreenOverlay"
              BackgroundColor="#CC000000"
              IsVisible="False"
              VerticalOptions="Fill"
              HorizontalOptions="Fill">

            <ScrollView VerticalOptions="Fill" HorizontalOptions="Fill">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">

                    <Image x:Name="FullscreenImage" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" MaximumHeightRequest="500" />

                    <!-- INFO -->
                    <StackLayout VerticalOptions="End" HorizontalOptions="Center" Spacing="5" BackgroundColor="Black" Opacity="0.5">
                        <Label x:Name="OverlayFileName" TextColor="White" FontSize="16" HorizontalTextAlignment="Center" />
                        <Label x:Name="OverlayDimensions" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                        <Label x:Name="OverlayFileSize" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                    </StackLayout>

                    <!-- ADD LABEL -->
                    <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                        <Entry x:Name="LabelEntry" Placeholder="Add label" WidthRequest="150" />
                        <Button Text="Add" Clicked="AddLabelButton_Clicked" />
                    </StackLayout>

                    <!-- DISPLAY LABELS -->
                    <StackLayout x:Name="LabelContainer" Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                    </StackLayout>
                </VerticalStackLayout>
            </ScrollView>

            <Button Text="Close"
                    BackgroundColor="White"
                    TextColor="Black"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    Margin="20"
                    Clicked="CloseFullscreen" />
        </Grid>
    </Grid>
</ContentPage>
