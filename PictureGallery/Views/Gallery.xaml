<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PictureGallery.Views.Gallery"
             xmlns:ContentView="clr-namespace:PictureGallery.Views"
             Title="Gallery">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the Gallery!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Button
            Text="Upload photo"
            Clicked="UploadMedia"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label
            x:Name="FileName"
            Text="No photo selected"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
        <!--added image view to xaml -->
        <Image
            x:Name="SelectedImage"
            WidthRequest="250"
            HeightRequest="250"
            Aspect="AspectFit"
            IsVisible="False"
            VerticalOptions="Center"
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>