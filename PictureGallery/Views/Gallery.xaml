<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:viewmodels="clr-namespace:PictureGallery.ViewModels"
                     xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
                     xmlns:views="clr-namespace:PictureGallery.Views"
                     x:Class="PictureGallery.Views.Gallery"
                     Title="Gallery"
                     Shell.NavBarIsVisible="False">
    <Grid x:Name="MainGrid" 
          ColumnDefinitions="220,*" 
          BackgroundColor="#F3E1DD"
          RowDefinitions="*">
        <!-- SIDEBAR -->
        <Border x:Name="Sidebar"
                Grid.Column="0"
                BackgroundColor="#CC7178"
                StrokeThickness="0"
                WidthRequest="220"
                IsVisible="True"
                HorizontalOptions="Start"
                VerticalOptions="Fill">
            <VerticalStackLayout Padding="24,32" Spacing="18">
                <Label Text="Menu"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0,0,0,6" />

                <Frame x:Name="ImportPhotoFrame"
                       BackgroundColor="#F3E1DD"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="#C7D9B7">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ImportPhotoCommand}" />
                    </Frame.GestureRecognizers>
                    <Label Text="Import Photo"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>

                <Frame x:Name="PhotoBookFrame"
                       BackgroundColor="#F3E1DD"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="#C7D9B7">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenPhotoBookCommand}" />
                    </Frame.GestureRecognizers>
                    <Label Text="Photo Book"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
                </Frame>


                <Frame x:Name="LabelFrame"
                    BackgroundColor="#F3E1DD"
                       CornerRadius="14"
                       Padding="14"
                       HasShadow="False"
                       BorderColor="#C7D9B7">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RemoveLabelSidebarCommand}" />
                    </Frame.GestureRecognizers>
                    <Label Text="All labels"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
            </VerticalStackLayout>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1">
            <!-- TOGGLE BUTTON -->
            <Button x:Name="SidebarToggleButton"
                    Text="☰"
                    FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    BackgroundColor="#F3E1DD"
                    BorderColor="#C7D9B7"
                    TextColor="Black"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    Margin="10"
                    IsVisible="False"
                    Clicked="ToggleSidebar_Clicked" />

            <VerticalStackLayout x:Name="MainContent"
                                 Padding="20" 
                                 Spacing="12" 
                                 Margin="0,60,0,0">

                <!-- HEADER -->
                <Grid ColumnDefinitions="Auto,*" 
                      SizeChanged="HeaderGrid_SizeChanged">
                    <Label x:Name="GalleryTitle"
                    Text="Photo Gallery"
                    FontSize="32"
                    TextColor="Black"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="Center" />

                    <HorizontalStackLayout x:Name="HeaderButtonsLayout"
                                       Grid.Column="1"
                                       Spacing="8"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center">
                        <Button x:Name="FilterLabelButton"
                            Text="{Binding FilterLabelButtonText}"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12"
                            Padding="12,8"
                            FontSize="14"
                            Command="{Binding FilterLabelCommand}" />
                        <Button x:Name="SortDateButton"
                            Text="{Binding SortDateButtonText}"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12"
                            Padding="12,8"
                            FontSize="14"
                            Command="{Binding SortDateCommand}" />
                        <Button x:Name="FilterRatingButton"
                            Text="{Binding FilterRatingButtonText}"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12"
                            Padding="12,8"
                            FontSize="14"
                            Command="{Binding FilterRatingCommand}" />
                        <Button x:Name="SelectButton"
                            Text="{Binding SelectButtonText}"
                            BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="12"
                            Padding="12,8"
                            FontSize="14"
                            Command="{Binding SelectButtonCommand}" />
                        <Button x:Name="SelectionActionsButton"
                            Text="⋯"
                            FontSize="20"
                           WidthRequest="40"
                            HeightRequest="40"
                            Padding="0"
                           BackgroundColor="#EDEDED"
                            TextColor="#333333"
                            CornerRadius="20"
                            IsVisible="{Binding SelectionActionsButtonVisible}"
                            Command="{Binding SelectionActionsCommand}" />
                    </HorizontalStackLayout>
                </Grid>

                <!-- PHOTO COUNT -->
                <Label x:Name="PhotoCountLabel"
                   Text="{Binding Photos.Count, StringFormat='Photos: {0}'}"
                   HorizontalOptions="Start"
                   Margin="0,5,0,0"
                   IsVisible="{Binding HasPhotos}" />

            <!-- EMPTY STATE VIEW -->
            <Grid x:Name="EmptyStateView"
                  Margin="0,20,0,0"
                  HorizontalOptions="Fill"
                  VerticalOptions="FillAndExpand"
                  IsVisible="{Binding HasPhotos, Converter={StaticResource InverseBoolConverter}, ConverterParameter=Inverse}">
                <Grid Padding="20">
                    <Frame Padding="20"
                           HasShadow="True"
                           CornerRadius="12"
                           BackgroundColor="White"
                           BorderColor="#E0E0E0">
                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label Text="Nog geen foto's"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   TextColor="#333333"
                                   HorizontalTextAlignment="Center" />
                            <Label Text="Upload je eerste foto om de gallery te vullen."
                                   FontSize="14"
                                   TextColor="#555555"
                                   HorizontalTextAlignment="Center" />
                            <Button Text="Import Photo"
                                    Padding="16,10"
                                    BackgroundColor="#EDEDED"
                                    TextColor="#333333"
                                    CornerRadius="12"
                                    Command="{Binding UploadMediaCommand}" />
                        </VerticalStackLayout>
                    </Frame>
                </Grid>
            </Grid>

            <!-- COLLECTIONVIEW -->
            <CollectionView x:Name="PhotosCollection"
                            Margin="0,20,0,0"
                            HorizontalOptions="Fill"
                            VerticalOptions="FillAndExpand"
                            ItemSizingStrategy="MeasureAllItems"
                            ItemsSource="{Binding Photos}"
                            IsVisible="{Binding HasPhotos}"
                            BindingContext="{Binding .}"
                            Loaded="PhotosCollection_Loaded"
                            SizeChanged="PhotosCollection_SizeChanged">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"
                                     Span="4"
                                     HorizontalItemSpacing="16"
                                     VerticalItemSpacing="16" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid HorizontalOptions="Fill"
                                  VerticalOptions="Fill"
                                  SizeChanged="Grid_SizeChanged">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=BindingContext.PhotoTappedCommand}"
                                                      CommandParameter="{Binding .}"
                                                      NumberOfTapsRequired="1" />
                                </Grid.GestureRecognizers>
                                <Frame x:Name="PhotoFrame"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                               Padding="10"
                               Margin="0"
                                   HasShadow="True"
                                   CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#E0E0E0">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup>
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="Frame.BorderColor" Value="#E0E0E0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="PointerOver">
                                            <VisualState.Setters>
                                                <Setter Property="Frame.BorderColor" Value="#C5C5C5" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Pressed">
                                            <VisualState.Setters>
                                                <Setter Property="Frame.BorderColor" Value="#A0A0A0" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <Image Source="{Binding ImageSource}"
                                   Aspect="AspectFit"
                                   HorizontalOptions="Fill"
                                   VerticalOptions="Fill"
                                       BackgroundColor="White" />
                                </Frame>
                                
                                <!-- Selectie Indicator (wordt getoond via IsSelected property) -->
                                <Frame x:Name="SelectionOverlay"
                                       Grid.Row="0"
                                       Grid.Column="0"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill"
                                       Padding="0"
                                       Margin="0"
                                       HasShadow="False"
                                       CornerRadius="8"
                                       BackgroundColor="#806750A4"
                                       BorderColor="#6750A4"
                                       IsVisible="{Binding IsSelected}"
                                       InputTransparent="True">
                                    <Label Text="✓"
                                           FontSize="48"
                                           FontAttributes="Bold"
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                            </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- FULLSCREEN OVERLAY -->
            <Grid x:Name="FullscreenOverlay"
                  BackgroundColor="#CC000000"
                  IsVisible="{Binding IsFullscreenOverlayVisible}"
                  VerticalOptions="Fill"
                  HorizontalOptions="Fill">

                <ScrollView VerticalOptions="Fill" HorizontalOptions="Fill">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10" Padding="20">

                        <Image x:Name="FullscreenImage" Source="{Binding FullscreenImageSource}" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Center" MaximumHeightRequest="500" />

                        <!-- INFO -->
                        <StackLayout VerticalOptions="End" HorizontalOptions="Center" Spacing="5" BackgroundColor="Black" Opacity="0.5">
                            <Label x:Name="OverlayFileName" Text="{Binding OverlayFileName}" TextColor="White" FontSize="16" HorizontalTextAlignment="Center" />
                            <Label x:Name="OverlayDimensions" Text="{Binding OverlayDimensions}" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                            <Label x:Name="OverlayFileSize" Text="{Binding OverlayFileSize}" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                            <Label x:Name="OverlayImportedDate" Text="{Binding OverlayImportedDate}" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                            <Label x:Name="OverlayCoordinates" Text="{Binding OverlayCoordinates}" TextColor="White" FontSize="14" HorizontalTextAlignment="Center" />
                        </StackLayout>

                        <!-- RATING STARS -->
                        <HorizontalStackLayout x:Name="RatingStarsContainer"
                                              Spacing="6"
                                              HorizontalOptions="Center"
                                              VerticalOptions="Center"
                                              Margin="0,10,0,10"
                                              Padding="10,0">
                            <Button x:Name="Star1"
                                    Text="★"
                                    FontSize="28"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    BorderWidth="0"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    TextColor="{Binding CurrentPhotoRating, Converter={StaticResource RatingToColorConverter}, ConverterParameter=1}"
                                    Command="{Binding StarClickedCommand}"
                                    CommandParameter="1" />
                            <Button x:Name="Star2"
                                    Text="★"
                                    FontSize="28"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    BorderWidth="0"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    TextColor="{Binding CurrentPhotoRating, Converter={StaticResource RatingToColorConverter}, ConverterParameter=2}"
                                    Command="{Binding StarClickedCommand}"
                                    CommandParameter="2" />
                            <Button x:Name="Star3"
                                    Text="★"
                                    FontSize="28"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    BorderWidth="0"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    TextColor="{Binding CurrentPhotoRating, Converter={StaticResource RatingToColorConverter}, ConverterParameter=3}"
                                    Command="{Binding StarClickedCommand}"
                                    CommandParameter="3" />
                            <Button x:Name="Star4"
                                    Text="★"
                                    FontSize="28"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    BorderWidth="0"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    TextColor="{Binding CurrentPhotoRating, Converter={StaticResource RatingToColorConverter}, ConverterParameter=4}"
                                    Command="{Binding StarClickedCommand}"
                                    CommandParameter="4" />
                            <Button x:Name="Star5"
                                    Text="★"
                                    FontSize="28"
                                    BackgroundColor="Transparent"
                                    BorderColor="Transparent"
                                    BorderWidth="0"
                                    WidthRequest="36"
                                    HeightRequest="36"
                                    Padding="0"
                                    TextColor="{Binding CurrentPhotoRating, Converter={StaticResource RatingToColorConverter}, ConverterParameter=5}"
                                    Command="{Binding StarClickedCommand}"
                                    CommandParameter="5" />
                        </HorizontalStackLayout>

                    <!-- ADD LABEL -->
                    <Grid HorizontalOptions="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        
                        <StackLayout Grid.Row="0" Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                            <Frame x:Name="LabelDropdownButton"
                                   BackgroundColor="#6750A4"
                                   CornerRadius="14"
                                   Padding="14,10"
                                   HasShadow="False"
                                   BorderColor="Transparent"
                                   WidthRequest="80"
                                   HeightRequest="44">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding LabelDropdownCommand}" />
                                </Frame.GestureRecognizers>
                                <HorizontalStackLayout Spacing="4" HorizontalOptions="Center" VerticalOptions="Center">
                                    <Label Text="Labels" 
                                           VerticalOptions="Center"
                                           FontSize="14"
                                           FontAttributes="Bold"
                                           TextColor="White" />
                                    <Label Text="⌄" 
                                           VerticalOptions="Center"
                                           FontSize="10"
                                           TextColor="White"
                                           Margin="0,-1,0,0" />
                                </HorizontalStackLayout>
                            </Frame>
                            <Entry x:Name="LabelEntry"
                                   Text="{Binding LabelEntryText, Mode=TwoWay}"
                                   Placeholder="Add label"
                                   WidthRequest="160"
                                   BackgroundColor="White"
                                   TextColor="Black"
                                   PlaceholderColor="#777777" />
                            <Button Text="Add" Command="{Binding AddLabelCommand}" />
                        </StackLayout>
                        
                        <!-- LABEL DROPDOWN (in Grid row below button, aligned with Labels button) -->
                        <Border x:Name="LabelDropdown"
                                Grid.Row="1"
                                IsVisible="False"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E0E0E0"
                                Padding="0"
                                MaximumHeightRequest="200"
                                WidthRequest="200"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                Margin="0,5,0,0">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <ScrollView>
                                <Grid x:Name="LabelDropdownList"
                                      RowDefinitions="Auto,*"
                                      BackgroundColor="White"
                                      WidthRequest="200">
                                </Grid>
                            </ScrollView>
                        </Border>
                    </Grid>

                        <!-- DISPLAY LABELS -->
                        <Grid x:Name="LabelsGrid" 
                              HorizontalOptions="Fill" 
                              Margin="0,10,0,0"
                              BindingContext="{Binding .}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <ScrollView Orientation="Horizontal"
                                        Grid.Row="0"
                                        HorizontalOptions="Fill"
                                        HorizontalScrollBarVisibility="Never"
                                        IsVisible="{Binding CurrentPhoto.Labels, Converter={StaticResource CollectionCountToBoolConverter}}">
                                <HorizontalStackLayout x:Name="LabelContainer"
                                                       Spacing="10"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"
                                                       Padding="20,0"
                                                       BindableLayout.ItemsSource="{Binding CurrentPhoto.Labels}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate>
                                            <Frame BackgroundColor="#6750A4"
                                                   CornerRadius="12"
                                                   Padding="10,8,8,8"
                                                   HasShadow="False"
                                                   BorderColor="Transparent"
                                                   HorizontalOptions="Start"
                                                   VerticalOptions="Center">
                                                <HorizontalStackLayout Spacing="6"
                                                                       VerticalOptions="Center">
                                                    <Label Text="{Binding .}"
                                                           FontSize="14"
                                                           FontAttributes="Bold"
                                                           TextColor="White"
                                                           VerticalOptions="Center"
                                                           VerticalTextAlignment="Center"
                                                           LineBreakMode="NoWrap" />
                                                    <Button Text="✕"
                                                            FontSize="12"
                                                            TextColor="White"
                                                            BackgroundColor="Transparent"
                                                            BorderColor="Transparent"
                                                            BorderWidth="0"
                                                            Padding="0"
                                                            WidthRequest="18"
                                                            HeightRequest="18"
                                                            VerticalOptions="Center"
                                                            HorizontalOptions="End"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type Grid}}, Path=BindingContext.RemoveLabelCommand}"
                                                            CommandParameter="{Binding .}" />
                                                </HorizontalStackLayout>
                                            </Frame>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </HorizontalStackLayout>
                            </ScrollView>
                            
                            <!-- Empty state for labels -->
                            <Label Text="No labels"
                                   Grid.Row="0"
                                   FontSize="14"
                                   TextColor="#CCCCCC"
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding CurrentPhoto.Labels, Converter={StaticResource InverseCollectionCountToBoolConverter}}" />
                        </Grid>

                        <!-- LOCATION MAP SECTION -->
                        <Border Margin="0,20,0,0"
                                BackgroundColor="White"
                                StrokeThickness="1"
                                Stroke="#E0E0E0"
                                Padding="0"
                                HorizontalOptions="Fill"
                                VerticalOptions="Start"
                                WidthRequest="500"
                                HeightRequest="300"
                                x:Name="MapBorder">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="8" />
                            </Border.StrokeShape>
                            <!-- Map will be added programmatically in code-behind for supported platforms -->
                            <Label x:Name="MapPlaceholderLabel"
                                   Text="Map loading..."
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#666666"
                                   FontSize="14"
                                   IsVisible="False" />
                        </Border>

                    </VerticalStackLayout>
                </ScrollView>

                <Button Text="Close"
                    BackgroundColor="White"
                    TextColor="Black"
                    VerticalOptions="Start"
                    HorizontalOptions="End"
                    Margin="20"
                    Command="{Binding CloseFullscreenCommand}" />
            </Grid>
        </Grid>

        <!-- Create PhotoBook Modal - Overlay on top of everything -->
        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              IsVisible="{Binding IsCreatePhotoBookModalVisible}"
              BackgroundColor="Transparent">
            <views:CreatePhotoBookModal x:Name="CreatePhotoBookModal"
                                        HorizontalOptions="Fill"
                                        VerticalOptions="Fill" />
        </Grid>
    </Grid>
</ContentPage>
